<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp"
    app:contentPadding="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_note__name_textview"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3sp"
                android:padding="8dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="Человек паук: Нет пути домой." />

            <Button
                android:id="@+id/item_note__delete_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10sp"
                android:backgroundTint="@color/grey"
                android:text="X" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_note__poster_iv"
                android:layout_width="540dp"
                android:layout_height="160dp"
                android:layout_weight="4"
                tools:src="@drawable/img" />

            <TextView
                android:id="@+id/item_note__content_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="12sp"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                tools:text="Фильм очень понравился\nРекомендую посмотреть!!!/nФильм очень понравился\nРекомендую посмотреть!!!" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/item_note__date_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:textAlignment="viewEnd"
                android:textSize="12sp"
                tools:text="16.12.21" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>